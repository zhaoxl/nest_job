			<h2 class="h2Title">完善简历</h2>
			<%= form_for @account_resume, url: (@account_resume.new_record? ? accounts_resumes_path : accounts_resume_path(@account_resume)) do |f|%>
        <%if flash[:error]%>
        <span style="color: red">错误信息:<%= flash[:error]%></span>
        <%end%>
        <%if flash[:notice]%>
        <span style="color: green">提示信息:<%= flash[:notice]%></span>
        <%end%>
				<div class="form">
					<div class="frm">
						<span class="">姓名：</span>
            <%= f.text_field :name%>
						<span class="error">*请填写昵称</span>
					</div>
					<div class="frm">
						<span class="">手机：</span>
            <%= f.text_field :tel%>
						<span class="error">*请填写昵称</span>
					</div>
					<div class="frm">
						<span class="">邮箱：</span>
            <%= f.text_field :email%>
						<span class="error">*请填写昵称</span>
					</div>
					<div class="frm">
						<span class="">出生年份：</span>
            <%= f.text_field :birthday, value: format_to_date(@account_resume.birthday)%>
						<span class="error">*请填写昵称</span>
					</div>
					<div class="frm">
						<span class="">性别：</span>
            <label>男<%= f.radio_button :gender, 1%></label>
            <label>女<%= f.radio_button :gender, 0%></label>
						<span class="error">*请填写昵称</span>
					</div>
          
					<div class="frm">
						<span class="">期望职位：</span>
            <%= f.text_field :tags%>
						<span class="error">*请填写昵称</span>
					</div>
					<div class="frm">
						<span class="">期望城市：</span>
            <%= f.text_field :area%>
						<span class="error">*请填写联系邮箱</span>
					</div>
					<div class="frm">
						<span class="">期望薪资：</span>
            <%= f.text_field :hope_salary%>
						<span class="error">*请填写公司邮箱</span>
					</div>
					<div class="frm">
						<span class="">学历：</span>
            <%= f.text_field :education%>
						<span class="error">*请填写公司邮箱</span>
					</div>
				</div>
      
				<div class="jobBtns">
          <%= f.submit raw("保&nbsp;存"), class: "btn"%>
				</div>
      <%end%>
		</div>
