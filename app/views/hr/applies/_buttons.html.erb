<%case params[:status]%>
<%when nil%>
<%when "status_apply_normal"%>
  <%= link_to "接受申请", accept_hr_applies_path(id: item.id), method: :post, class: "btnR"%>
  <%= link_to "拒绝申请", reject_hr_applies_path(id: item.id), method: :post, class: "btnR"%>
<%when "status_apply_hr_reject"%>
<%when "status_wait_audition"%>
  <%= link_to "面试成功", pass_hr_auditions_path(id: item.id), method: :post, class: "btnR"%>
  <%= link_to "面试失败", fail_hr_auditions_path(id: item.id), method: :post, class: "btnR"%>
<%when "status_audition_passed"%>
  <%= link_to "试用成功", pass_hr_probations_path(id: item.id), method: :post, class: "btnR"%>
  <%= link_to "试用失败", fail_hr_probations_path(id: item.id), method: :post, class: "btnR"%>
<%when "status_audition_failed"%>
<%end%>