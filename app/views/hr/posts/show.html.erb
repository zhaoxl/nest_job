<%= content_for :head_include do%>
	<link rel="stylesheet" href="/鸟窝html/stylesheets/ui_common.css" />
	<link rel="stylesheet" href="/鸟窝html/stylesheets/job_detail.css" />
<%end%>
<div class="mainContainer">
	<div class="main">
		<div class="ml">
			<h2 class="h2Title">公司信息</h2>
			<div class="companyInfo">
				<div class="compImg"><a href="#"><img src="images/company_demo.jpg" alt="" /></a></div>
				<div class="compInfo">
					<p><%= @company.name%></p>
					<p class="cmpUrl"><%= link_to @company.home_page, @company.home_page, target: :_blank%></p>
					<p>性质：<%= @company.nature.to_s%></p>
					<p>行业：<%= @company.industry.to_s%></p>
					<p>融资阶段：<%= @company.financing_stage.to_s%></p>
				</div>
			</div>
		</div>
		<div class="mm">
			<h2 class="h2Title">职位详情</h2>
			<div class="jobDetail">
				<div class="hrInfo">
					<div class="hrImg"><%= link_to image_tag(@post.account.logo(:thumb)), "#"%></div>
					<div class="hrIf">
						<p><span><%= current_account.nick_name%> （<%= @post.protect_email%>）</span></p>
						<p class="hot"><span>发布了  <%= @post.title%></span></p> 
						<p><span>地点：<%= @post.address%></span><span>公司：<%= @company.name%></span><span>薪资：￥<%= "#{@post.price_min.to_i}k ~ #{@post.price_max.to_i}k"%></span></p>
						<p class="time">发布时间：<%= @post.created_at.strftime("%Y.%m.%d")%></p>
					</div>
				</div>
        <div class="content">
          <%= sanitize @post.content %>
        </div>
			</div>
			<div class="jobBtns">
				<a href="javascript:void(0)" class="btnR">编    辑</a><a href="#" class="btnR">分    享</a>
				<a href="javascript:void(0)" class="btnR">下    架</a>
				<a href="javascript:void(0)" class="btnR">上    架</a>
                    <a href="javascript:void(0)" class="btnR">删    除</a>
			</div>
		</div>
	</div>
  <%= render partial: "/layouts/right"%>
</div>