<%content_for :head_include do%>
	<link rel="stylesheet" href="/鸟窝html/stylesheets/job_detail.css" />
<%end%>
<%= stylesheet_link_tag    '/鸟窝html/javascripts/bxslider/jquery.bxslider.css', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag '/鸟窝html/javascripts/bxslider/jquery.bxslider.min.js', 'data-turbolinks-track' => true %>
<div class="mainContainer">
	<div class="main">
		<div class="ml">
			<%= render partial: "/layouts/left_company_info", locals: {company: @company}%>
		</div>
		<div class="mm">
			<h2 class="h2Title">职位详情</h2>
			<div class="jobDetail">
				<div class="hrInfo">
					<div class="hrImg"><%= link_to image_tag(@post.account.logo(:thumb)), "#"%></div>
					<div class="hrIf">
						<p><span><%= @post.account.nick_name%> （<%= @post.protect_email%>）</span></p>
						<p class="hot"><span>发布了  <%= @post.title%></span></p> 
						<p><span>地点：<%= @post.address%></span><span>公司：<%= @company.name%></span><span>薪资：￥<%= "#{@post.price_min.to_i}k ~ #{@post.price_max.to_i}k"%></span></p>
						<p class="time">发布时间：<%= @post.created_at.strftime("%Y.%m.%d")%></p>
					</div>
				</div>
        <div class="content">
          <%= sanitize @post.content %>
        </div>
			</div>
			<div class="jobBtns">
        <a href="javascript:void(0)" jobid="<%= @post.id%>" class="btnR initiateInterviewBtn" resume_complete="<%= current_account && current_account.current_account_resume.complete?%>">发起面试</a>
			</div>
		</div>
	</div>
  <%= render partial: "/layouts/right"%>
</div>
<script>
$(document).ready(function(){
  $('.bxslider').bxSlider({
    mode: 'fade',
    captions: true
  });
});
</script>