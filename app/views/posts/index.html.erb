<%content_for :head_include do%>
<%end%>
<div class="mainContainer">
  <div class="main">
  	<div class="ml">
  		<h2 class="regH2">推荐公司</h2>
  		<ul class="brands">
  			<li><a href="#" class="baidu"><span>百度</span></a></li>
  			<li><a href="#" class="baiduyun"><span>百度云</span></a></li>
  			<li><a href="#" class="huaban"><span>花瓣</span></a></li>
  			<li><a href="#" class="oneshop"><span>1号店</span></a></li>
  			<li><a href="#" class="jd"><span>京东</span></a></li>
  			<li><a href="#" class="sina"><span>新浪</span></a></li>
  		</ul>
  	</div>
  	<div class="mm">
        <ul class="procGuide pgd1">
            <li><a href="#" class="current first">等待HR处理</a></li>
            <li><a href="#" class="second">HR已查看简历</a></li>
            <li class="third"><a href="#">HR同意</a></li>
            <li><a href="#" class="fourth">面试通过</a></li>
            <li><a href="#" class="fifth">试用期通过</a></li>
            <li class="last sixth"><a href="#">恭喜</a></li>
        </ul>
        <div class="processorBar">
            <div class="pb p0"></div>
        </div>
        <div class="procGuide">
            <ul class="pgd2">
                <li><a href="#" class="third">HR拒绝</a></li>
                <li><a href="#" class="fourth">面试未通过</a></li>
                <li><a href="#" class="fifth">试用期未通过</a></li>
                <li class="last"></li>
            </ul>
        </div>
  		<ul class="employment">
        <%resume_is_complete = current_account.current_account_resume.complete?%>
  			<%@posts.each do |post|%>
  			<li class="selectcurrent">
  				<div class="employInfo">
  					<div class="userImg"><%= link_to image_tag(post.account.logo(:thumb)), "#"%></div>
  					<div class="employDetail">
  						<p><span class="b"><%= post.account.nick_name%>   （<%= post.protect_email%>）</span><span>发布了  <%= post.title%></span></p>  
  						<p><span class="b">地点：<%= post.address%></span><span class="b">公司：<%= post.company.name%></span><span class="b">薪资：<%= "#{post.price_min.to_i}k ~ #{post.price_max.to_i}k"%></span></p>
  						<dl>
  						 	<dt>职位要求：</dt>
  						 	<%= sanitize post.content %>
  						 </dl> 
  					</div>
  				</div>
				
  				<div class="employBtns">
  					<a href="javascript:void(0)" class="btnR initiateInterviewBtn" resume_complete="<%= resume_is_complete%>">发起面试</a><a href="<%= post_path(post)%>" class="btnR">查    看</a><a href="#" class="btnR">收    藏</a>
  				</div>
  			</li>
        <%end%>
  		</ul>
      <%= paginate @posts, window: 6%>
  	</div>
  </div>
  <%= render partial: "/layouts/right"%>
</div>

